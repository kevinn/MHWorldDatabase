<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Image Styles -->
    <style name="IconSmall">
        <item name="android:layout_width">@dimen/image_size_small</item>
        <item name="android:layout_height">@dimen/image_size_small</item>
    </style>

    <style name="IconMedium">
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_height">@dimen/image_size_medium</item>
    </style>

    <style name="IconLarge">
        <item name="android:layout_width">@dimen/image_size_large</item>
        <item name="android:layout_height">@dimen/image_size_large</item>
    </style>

    <style name="ImageXLarge">
        <item name="android:layout_width">@dimen/image_size_xlarge</item>
        <item name="android:layout_height">@dimen/image_size_xlarge</item>
    </style>

    <!-- Text Styles -->
    <!-- https://material.io/guidelines/style/typography.html#typography-other-typographic-guidelines -->
    <style name="TextDisplay1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/md_text_color_display_1_dark_theme</item>
        <item name="android:textSize">@dimen/md_text_size_display_1_regular</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/md_text_color_body_1_dark_theme</item>
        <item name="android:textSize">@dimen/md_text_size_medium</item>
    </style>

    <style name="TextBody0" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/md_text_color_body_1_dark_theme</item>
        <item name="android:textSize">@dimen/md_text_size_small</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/md_text_color_caption_dark_theme</item>
        <item name="android:textSize">@dimen/md_text_size_small</item>
    </style>

    <style name="SectionHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/md_text_color_body_1_dark_theme</item>
        <item name="android:textSize">@dimen/md_text_subheading_regular</item>
    </style>

    <style name="SubHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/textColorSubHead</item>
        <item name="android:textStyle">bold</item>
        <!-- Font style must be set programmatically to Roboto Medium 14sp -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:background">@color/primaryLightColor</item>
    </style>

</resources>
